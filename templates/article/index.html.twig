{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}



{% block body %}

    <section class="slider">
        <div class="container">
        <div class="row">
            <div class="col-md-12">
            <div class="block">
                <h1 class="animated fadeInUp"> CineBlog</h1>
                <p class="animated fadeInUp">Retrouvez tous vos films préférés</p>
            </div>
            </div>
        </div>
        </div>
    </section>


    <div class="page-wrapper">
        <div class="container">
            <h1 class="haut-page">Tous nos articles</h1>
            <br>
            <div class="row">
            {% for article in articles %}
                <div class="col-md-6">
                    <div class="post">
                        <div class="post-thumb">
                            <a href="blog-single.html">
                                <img class="img-fluid" src="{{asset('images/blog/blog-post-1.jpg')}}" alt="">
                            </a>
                        </div>
                        <h3 class="post-title"><a href="blog-single.html">{{article.titre}}</a></h3>
                        <div class="post-meta">
                            <ul>
                                <li>
                                    <i class="ion-calendar"></i> {{article.date|date("d/m/Y H:i")}}
                                </li>
                                <li>
                                    <i class="ion-android-people"></i> {{ article.utilisateur.pseudo}}
                                </li>
                                <li>
                                    <a href="blog-grid.html"><i class="ion-pricetags"></i> {{ article.categorie.libelle}} </a>
                                </li>
                            </ul>
                        </div>
                        <div class="post-content">
                            <p>{{article.contenu}}</p>
                            <a href="{{path('app_article_show', {'id': article.id})}}" class="btn btn-main">Read More</a>
                            <a href="{{ path('app_article_api', {'id': article.id}) }}" class="btn btn-main">Show API</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <p>Aucun article trouvé</p>
            {% endfor %}
            </div>
            <a href="{{path('app_article_new')}}" class="btn btn-main">Ecrire un article</a>
        </div>
    </div>



{% endblock %}
