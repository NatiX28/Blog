{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}

<section class="slider">
        <div class="container">
        <div class="row">
            <div class="col-md-12">
            <div class="block">
                <h1 class="animated fadeInUp"> {{article.titre}}</h1>
            </div>
            </div>
        </div>
        </div>
    </section>

    <div>
        {{article.contenu | raw}}
    </div>

    <div>
        <h5>Ecrit par {{article.utilisateur.pseudo}}</h5>
        <h6>Publi√© le {{article.date|date("d/m/Y H:i")}}</h6>
    </div>

    <a href="{{ path('app_article_index') }}" class="btn btn-main">back to list</a>

    {% if is_granted('EDIT', article) or is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-main">edit</a>
    {% endif %}

{% endblock %}